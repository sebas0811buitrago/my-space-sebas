---
import type { CollectionEntry } from "astro:content"
import Chip from "./Chip.astro"

type Props = CollectionEntry<"experience">["data"]

const {
	title,
	company: { name: companyName, url: companyUrl },
	startDate,
	endDate,
	technologies,
} = Astro.props
---

<article class="flex flex-col gap-5">
	<header>
		<h2 class="text-lg font-light">{title}</h2>

		<h3>
			<a href={companyUrl} class="text-neutral-secondary hover:text-accent" target="_blank"
				>{companyName}</a
			>
		</h3>
	</header>

	<section
		id="experience-description"
		class="flex list-decimal flex-col gap-4 text-sm text-neutral-secondary"
	>
		<slot />
	</section>

	<div class="flex flex-wrap gap-4">
		{technologies.map((technology) => <Chip>{technology}</Chip>)}
	</div>
</article>

<h1>hola</h1>

<style>
	h1 {
		color: red;
	}
	.experience-description ul {
		color: red;
	}

	/* Style for list items */
	ul li {
		font-family: Arial, sans-serif; /* Font style */
		font-size: 16px; /* Font size */
		color: #333; /* Text color */
		margin: 10px 0; /* Margin between list items */
		padding: 5px; /* Padding inside list items */
		transition: background-color 0.3s; /* Transition for hover effect */
	}

	/* Hover effect for list items */
	ul li:hover {
		background-color: #e0e0e0; /* Change background color on hover */
		cursor: pointer; /* Change cursor to pointer */
	}
</style>
